{
    "manifest_version": 2, 
    "name": "First Chrome Extension",
    "version": "1.0", 
    "description": "Learn how to build Chrome Extensions", 
    "content_scripts": [
        {
            "matches" : [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }, 
    "browser_action" : {
        "default_icon": "icon.png"
    }

}